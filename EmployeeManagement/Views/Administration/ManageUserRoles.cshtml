@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "ManageUserRoles";
    var userId = ViewBag.userId;
    var userName = ViewBag.UserName;
}

<form method="post">

    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Manage User Roles</h2>
            <h3>@userName</h3>
        </div>
        <div class="card-body">
            <!--Note foreach will not work here because we want to submit this list back to the server and the names of these elements has to be unique for each role-->
            @for(int i= 0; i< Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId"/>
                    <input type="hidden" asp-for="@Model[i].RoleName"/>
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName </label>
                </div>
            }

            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div card="card-footer">
            <input type="submit" value="update" style="width:auto" class="btn btn-primary" />
            <a asp-action="EditUser" asp-route-id ="@userId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>

</form>